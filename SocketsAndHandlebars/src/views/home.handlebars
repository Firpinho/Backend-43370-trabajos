<div class="container p-4">
  {{!  Titulo }}
  <div class="title">
    <h1>Products</h1>
  </div>
  {{!  Seccion productos }}
  <section class="products">
    <div class="card-group">
      <div class="col md-4 pt-2 d-flex flex-wrap">

        {{#each products}}
          {{#if thumbnails}}
            <div class="card m-2" style="width: 18rem;">
              {{! SLIDER }}
              <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-bs-ride="carousel"
              >
                <div class="carousel-indicators">
                  {{#each thumbnails}}

                    {{#index0 @index}}
                      <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="{{@index}}"
                        class="active"
                        aria-current="true"
                        aria-label="Slide {{slideNumber @index}}"
                      ></button>
                    {{else}}
                      <button
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="{{@index}}"
                        aria-label="Slide {{slideNumber @index}}"
                      ></button>
                    {{/index0}}

                  {{/each}}
                </div>
                <div class="carousel-inner">
                  {{#each thumbnails}}

                    {{#index0 @index}}
                    <div class="carousel-item active">
                      <img src="{{this}}" class="card-img-top" alt="..." />
                    </div>
                    {{else}}
                    <div class="carousel-item">
                      <img src="{{this}}" class="card-img-top" alt="..." />
                    </div>
                    {{/index0}}

                  {{/each}}
                </div>
              </div>

              {{! CARD CONTENT }}

              <div class="card-body d-flex flex-column">
                <h4 class="card-title">{{title}}</h4>
                <h6 class="card-text">
                  {{category}}
                </h6>
                <p class="card-text pt-2">
                  {{description}}
                </p>
                <div class="bottom mt-auto">
                  <p class="card-text"><small
                      class="text-muted"
                    >{{code}}</small></p>
                  <p class="card-text"><span class="price">$<b
                      >{{price}}</b></span>
                    <span class="stock">Stock: <b>{{stock}}</b></span></p>
                  <div class="buttons">
                    <button class="btn btn-primary" onclick="update({{id}})">
                      <i class="fas fa-gear"></i>
                    </button>
                    <button class="btn btn-danger" onclick="delete({{id}})">
                      <i class="fas fa-trash-can"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {{else}}
            <div class="card m-2" style="width: 18rem;">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title">{{title}}</h4>
                <h6 class="card-text">
                  {{category}}
                </h6>
                <p class="card-text pt-2">
                  {{description}}
                </p>
                <div class="bottom mt-auto">
                  <p class="card-text"><small
                      class="text-muted"
                    >{{code}}</small></p>
                  <p class="card-text"><span class="price">$<b
                      >{{price}}</b></span>
                    <span class="stock">Stock: <b>{{stock}}</b></span></p>
                </div>
              </div>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </section>
</div>